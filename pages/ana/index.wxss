.body-container {
    padding-bottom: 20rpx;
}

.full-box {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 10rpx;
    position: relative;
}

.full-box image {
    width: 150rpx;
}

button {
    margin: 20rpx;
    overflow: visible;
}

.color-container {
    display: flex;
    padding: 20rpx;
    padding-bottom: 0;
}

.color-container .desc {
    flex: 1;
    padding-left: 20rpx;
}

.color-container .desc .row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
}

.color-container .desc .row .name {
    font-size: 35rpx;
}

.color-container .desc .row .value {
    font-size: 35rpx;
}

.palettes {
    display: flex;
    padding: 20rpx;
    align-items: flex-end;
}

.palettes .palette-item {
    flex: 1;
    height: 60rpx;
    margin: 0 5rpx;
}

.palettes .palette-item.active {
    border-bottom: 10rpx solid;
}

.btn-row {
    display: flex;
    justify-content: center;
}

.btn-row button {
    flex: 1;
}